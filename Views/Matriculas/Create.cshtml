@model sbelt.Models.Matricula

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo UserId: hidden (não editável pelo usuário) -->
            <div class="form-group">
                <input asp-for="UserId" type="hidden" value="@Model.UserId" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Campo EventAcademics_Id: Dropdown -->
            <div class="form-group">
                <label asp-for="EventAcademics_Id" class="control-label">Eventos disponíveis para você</label>
                <select asp-for="EventAcademics_Id" class="form-control"
                        asp-items="@(ViewData["EventAcademics_Id"] as IEnumerable<SelectListItem>)"></select>

                <span asp-validation-for="EventAcademics_Id" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


